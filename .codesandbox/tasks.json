{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "build": {
      "name": "build",
      "command": "pnpm build"
    },
    "dev": {
      "name": "dev",
      "command": "pnpm dev",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "dev:web": {
      "name": "dev:web",
      "command": "pnpm dev:web",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "dev:docs": {
      "name": "dev:docs",
      "command": "pnpm dev:docs",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    },
    "lint": {
      "name": "lint",
      "command": "pnpm lint"
    },
    "clean": {
      "name": "clean",
      "command": "pnpm clean"
    },
    "format": {
      "name": "format",
      "command": "pnpm format"
    },
    "changeset": {
      "name": "changeset",
      "command": "pnpm changeset"
    },
    "version-packages": {
      "name": "version-packages",
      "command": "pnpm version-packages"
    },
    "release": {
      "name": "release",
      "command": "pnpm release"
    },
    "pnpm install": {
      "name": "Install dependencies",
      "command": "pnpm install"
    }
  }
}
